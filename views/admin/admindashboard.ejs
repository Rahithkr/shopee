                'rgba(54, 162, 235, 1)'
              ],
              borderWidth: 1
            }]
          }
        });



        async function graphSalesWeekly() {
          try {
            const response = await fetch('/admin/saleweekly', { method: 'POST' });

            if (response.ok) {
              console.log('Weekly data fetched successfully');
              const data = await response.json();

              // Update the weeklyChart data and labels
              weeklyChart.data.labels = data.map(item => item.week);
              weeklyChart.data.datasets[0].data = data.map(item => item.ordersCount);

              // Update the chart
              weeklyChart.update();
            }
          } catch (error) {
            console.error('Error fetching weekly data:', error);
          }
        }

        const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
        window.weeklyChart = new Chart(weeklyCtx, {
          type: 'bar',
          data: {
            labels: [],
            datasets: [{
              label: 'Weekly Sales',
              data: [],
              backgroundColor: 'rgba(75, 192, 192, 0.2)',
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });



        // Function to fetch and update stock data
        async function graphStocks() {
          try {
            const URL = "/admin/revenue"; // Update with your actual endpoint
            const response = await fetch(URL, { method: "POST" });

            if (response.ok) {
              console.log('Stock data fetched successfully');
              const data = await response.json();
              const labels = data.products;
              const values = data.totalStocks;

              stockChart.data.labels = labels;
              stockChart.data.datasets[0].data = values;
              stockChart.update();
            }
          } catch (error) {
            console.error('Error fetching stock data:', error);
          }
        }


        // Your Chart.js code for yearly sales chart




        // Function to fetch and update monthly sales data
        async function graphSales() {
          try {
            const URL = "/admin/sales-data"; // Update with your actual endpoint
            const response = await fetch(URL, { method: "POST" });

            if (response.ok) {
              console.log('Monthly data fetched successfully');
              const data = await response.json();
              const values = data.map(item => item.ordersCount);

              monthlyChart.data.datasets[0].data = values;
              monthlyChart.update();
            }
          } catch (error) {
            console.error('Error fetching monthly data:', error);
          }
        }

        // Function to fetch and update yearly sales data
        async function graphSalesYear() {
          try {
            const response = await fetch('/admin/saleyearly', { method: 'POST' });

            if (response.ok) {
              console.log('Yearly data fetched successfully');
              const data = await response.json();
              const values = data.map(item => item.ordersCount);

              yearlyChart.data.datasets[0].data = values;
              yearlyChart.update();
            }
